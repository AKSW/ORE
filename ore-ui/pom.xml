			<version>2.2.2</version>
		</dependency>
		<dependency>
			<groupId>edu.stanford</groupId>
			<artifactId>tagger</artifactId>
			<version>2.0.0</version>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.owlapi</groupId>
			<artifactId>owlapi-distribution</artifactId>
		</dependency>
		<dependency>
			<groupId>net.sourceforge.owlapi.owllink</groupId>
			<artifactId>owllink</artifactId>
		</dependency>
		<dependency>
			<groupId>com.clarkparsia</groupId>
			<artifactId>pellet</artifactId>
		</dependency>
		<dependency>
			<groupId>org.semanticweb.owl.explanation</groupId>
