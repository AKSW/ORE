		</dependency>
		<dependency>
   <groupId>org.vaadin.addons</groupId>
   <artifactId>contextmenu</artifactId>
   <version>4.2.1</version>
</dependency>
		<dependency>
			<groupId>org.aksw.mole</groupId>
			<artifactId>ore-core</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.dllearner</groupId>
			<artifactId>components-core</artifactId>
			<exclusions>
				<exclusion>
					<artifactId>stanford-corenlp</artifactId>
					<groupId>edu.stanford.nlp</groupId>
				</exclusion>
				<exclusion>
					<artifactId>lucene-analyzers-common</artifactId>
					<groupId>org.apache.lucene</groupId>
				</exclusion>
				<exclusion>
					<artifactId>lucene-core</artifactId>
					<groupId>org.apache.lucene</groupId>
				</exclusion>
				<exclusion>
					<artifactId>lucene-queryparser</artifactId>
					<groupId>org.apache.lucene</groupId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>org.apache.pdfbox</groupId>
			<artifactId>pdfbox</artifactId>
			<version>1.8.2</version>
		</dependency>
		<!-- Patomat -->
		<dependency>
			<groupId>org.coode.oppl</groupId>
			<artifactId>api</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>org.coode.oppl</groupId>
			<artifactId>parsers</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>org.cz.vse.keg</groupId>
			<artifactId>patomat</artifactId>
			<version>0.1</version>
		</dependency>
		<dependency>
			<groupId>org.cz.vse.keg</groupId>
			<artifactId>meronymy</artifactId>
			<version>0.2</version>
		</dependency>
		<dependency>
			<groupId>org.cz.vse.keg</groupId>
			<artifactId>nlp</artifactId>
